<Grid
    x:Class="AINotes.Components.Component"
    
    Padding="0" Margin="0" ColumnSpacing="0" RowSpacing="0"
    SizeChanged="OnSizeChanged"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls1="using:Helpers.Controls"
    
    Canvas.ZIndex="{x:Bind _zIndex}">
    
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    
    <controls1:CustomFrame x:Name="Border"
                          Margin = "-2"
                          IsHitTestVisible = "False"
                          CornerRadius = "0"
                          BorderThickness = "1" />

</Grid>
