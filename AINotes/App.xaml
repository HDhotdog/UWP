									    </VisualState>
									    <VisualState x:Name="PointerOver">
										    <Storyboard>
											    <DoubleAnimation Duration="0" To="{StaticResource TextControlPointerOverBackgroundThemeOpacity}" Storyboard.TargetProperty="Opacity" Storyboard.TargetName="BackgroundElement"/>
